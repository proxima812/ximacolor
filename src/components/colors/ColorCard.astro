---
import { t } from "@/i18n";
import { Icon } from "astro-icon/components";

const { locale, ...card } = Astro.props;

const copyDefaultLabel = t(locale, "copyDefault");
const copyCopiedLabel = t(locale, "copyCopied");
---

<article
	class="flex gap-6 items-center"
	data-color-item
	data-color-name={card.lowerName}
	data-color-tags={card.tags.join(",")}
	role="listitem"
	aria-label={card.name}
>
	<div class="md:w-1/3 w-1/2">
		<div class="text-zinc-500 flex justify-between items-center mb-2">
			<span class="text-sm">{card.name}</span>
			<span class="text-xs">{t(locale, "idLabel")}: {card.id + 1}</span>
		</div>
		<div
			class={`${card.className} rounded-3xl h-36 grid place-items-center ring-1 ring-black/5`}
			aria-hidden="true"
		>
		</div>
	</div>

	<div
		class="w-1/2 text-xs md:text-sm flex justify-between gap-2 flex-col h-full py-8 items-end text-zinc-500 leading-relaxed desc-text"
	>
		<span>{card.description}</span>
	<div class="flex items-center gap-3 font-medium">
    <span class="text-xs">CSS3</span>
	  	<button
  			type="button"
  			class="copy-btn cursor-pointer ring-1 ring-inset ring-zinc-400/30 inline-flex gap-1.5 items-center px-3 py-2 rounded-md text-xs text-black bg-white"
  			data-copy-btn
  			data-copy-class={card.className}
  			aria-label={`${copyDefaultLabel} CSS: ${card.name}`}
  		>
  			<span class="copy-btn-icon copy-btn-icon-copy" aria-hidden="true"><Icon name="mdi:content-copy" /></span>
  			<span class="copy-btn-icon copy-btn-icon-check" aria-hidden="true"><Icon name="mdi:check-bold" /></span>
  			<span
  				class="copy-btn-label"
  				data-copy-default={copyDefaultLabel}
  				data-copy-copied={copyCopiedLabel}>{copyDefaultLabel}</span
  			>
  		</button>
	</div>
	</div>
</article>
